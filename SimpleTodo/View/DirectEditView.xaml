<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="cvw_Edit" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SimpleTodo.DirectEditView" xmlns:local="clr-namespace:SimpleTodo">
    <StackLayout Orientation="Vertical">
        <Frame x:Name="frm_Editor" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Vertical">
                <Label x:Name="lbl_Label" Text="{Binding Title.Value}" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    <Entry x:Name="txt_Entry" Text="{Binding Name.Value}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Placeholder="ここに新しい名前を入力"/>
                    <Button x:Name="btn_Ok" Text="OK" HorizontalOptions="End" VerticalOptions="CenterAndExpand" Clicked="OnClicked" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentView>